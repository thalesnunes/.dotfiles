#!/bin/bash

bin="$HOME/.local/bin"

if [ $# -eq 0 ] && [ -e "$HOME/.sun" ]; then
    result=$(cat ~/.sun)
    IFS=" " read -r sunrise sunset <<< "$result"
    now=$(date +%R)

    if [[ "$now" > "$sunrise" ]] && [[ "$now" < "$sunset" ]]; then
        MODE=light
    else
        MODE=dark
    fi
else
    MODE=$1
fi

$bin/feh_init $MODE > /dev/null 2>&1 &
$bin/polybar_starter $MODE > /dev/null 2>&1 &
