#!/usr/bin/env bash

DOT="$HOME/.dotfiles"
TOCD=$DOT
FILE=""
PROG=$1
case $PROG in
    bin)
        TOCD="$DOT/bin/.local/bin"
        FILE=""
        ;;
    poly*)
        TOCD="$DOT/polybar/.config/polybar/forest"
        FILE=""
        ;;
    ali*)
        TOCD="$DOT/zsh/.oh-my-zsh/custom"
        FILE="aliases.zsh"
        ;;
    func*)
        TOCD="$DOT/zsh/.oh-my-zsh/custom"
        FILE="functions.zsh"
        ;;
    exp*)
        TOCD="$DOT/zsh/.oh-my-zsh/custom"
        FILE="exports.zsh"
        ;;
    tok*)
        TOCD="$DOT/zsh/.oh-my-zsh/custom"
        FILE="tokens.zsh"
        ;;
    *)
        if [ -d $DOT/$PROG ]; then
            TOCD="$DOT/$PROG"
            if [ -d $TOCD/.config ]; then
                TOCD="$TOCD/.config"
                if [ -d $TOCD/$PROG ]; then
                    TOCD="$TOCD/$PROG"
                fi
            fi
        fi
        files=$(ls -A1q $TOCD)
        if [ $(echo "$files" | wc -l) -eq 1 ]; then
            FILE=$files
        fi
        ;;
esac

cd $TOCD
$EDITOR $FILE
cd "$OLDPWD"
