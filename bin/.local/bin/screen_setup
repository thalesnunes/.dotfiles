#!/usr/bin/env bash

OUTPUTS_DIR="$XDG_CONFIG_HOME/sway/outputs"

if [ -n "$1" ]; then
    screen_profile="$1"
    primary_monitor="$2"
    secondary_monitor="$3"
else
    source $XDG_USER_BIN/screen_profile_selector
fi

sed "s/:PRIMARY_MONITOR/$primary_monitor/g; s/:SECONDARY_MONITOR/$secondary_monitor/g;" $OUTPUTS_DIR/"$screen_profile-screen.conf" > $OUTPUTS_DIR/screen.conf
notify-send -a "Desktop Setup" "Screen Setup" "$screen_profile output profile was setup"
