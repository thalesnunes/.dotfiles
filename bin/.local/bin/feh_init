#!/usr/bin/env bash

# DIR="/home/thales/Imagens/Wallpapers"
# day="day_valley.jpg"
# night="night_firewatch.png"

# if [[ $1 = "light" ]]; then
#     Wallpaper=$day
# elif [[ $1 = "dark" ]]; then
#     Wallpaper=$night
# fi

# feh --no-fehbg --bg-fill "$DIR/$Wallpaper"

DIR="/home/thales/Images/Wallpapers/Lakeside Day-Night"

cd "$DIR"
HOUR=$(expr $(date +%H))
if [ $(expr $HOUR % 2) -eq 0 ]; then
    if [ $HOUR -eq 0 ]; then
        HOUR=23
    else
        HOUR=$(expr $HOUR - 1)
    fi
    img=$(ls $(printf "%02d" $HOUR)*)
else
    img=$(ls $HOUR*)
fi

feh --no-fehbg --bg-fill "$img"
