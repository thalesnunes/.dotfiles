#!/usr/bin/env bash

languages="$HOME/.dotfiles/chtsh/.config/languages"
utils="$HOME/.dotfiles/chtsh/.config/utils"

selected=$(cat $languages $utils | fzf)
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if [[ -n $TMUX ]]; then
    if grep -qs "$selected" $languages; then
        query=$(echo $query | tr ' ' '+')
        tmux neww bash -c "curl cht.sh/$selected/$query | less"
    else
        tmux neww bash -c "curl -s cht.sh/$selected~$query | less"
    fi
else
    if grep -qs "$selected" $languages; then
        query=$(echo $query | tr ' ' '+')
        curl cht.sh/$selected/$query | less
    else
        curl -s cht.sh/$selected~$query | less
    fi
fi

