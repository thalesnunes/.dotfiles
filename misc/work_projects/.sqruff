[sqruff]
dialect = snowflake
exclude_rules = LT01,LT02,LT04,LT05,CV03
rules = all

[sqruff:indentation]
indent_unit = space
tab_space_size = 4
indented_joins = True
indented_ctes = True
indented_using_on = True
indented_on_contents = True
indented_then = True
indented_then_contents = True
allow_implicit_indents = True
template_blocks_indent = True
