###########################################################
#                     Personal Binds
###########################################################

# Kill focused window
bindsym $mod+BackSpace kill
bindsym $alt+q kill

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Start a terminal
bindsym $mod+Return exec $terminal

# Exit i3 (logs you out of your X session)
bindsym $alt+Control+Delete exec ${HOME}/.config/rofi/pipeline Power

# Open browsers
bindsym $mod+b exec brave --profile-directory="Default"
bindsym $mod+u workspace $ws2, exec brave --profile-directory="Profile 1"

# Telegram
bindsym $mod+m exec telegram-desktop

# Whatsapp
bindsym $mod+n exec ${HOME}/Scripts/whatsapp_init

# File Managers
bindsym $mod+e exec $terminal -e ranger
bindsym $mod+Shift+e exec pcmanfm

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle


###########################################################
#                        Modes
###########################################################

# Rofi mode for launching different scripts
mode "ROFI" {

    # Lauch main script (app launcher and others)
    bindsym space exec ${HOME}/.config/rofi/main -show combi; mode "default"
    bindsym $mod+space exec ${HOME}/.config/rofi/main -show combi; mode "default"
    # Lauch Power script
    bindsym Delete exec ${HOME}/.config/rofi/pipeline Power; mode "default"
    # Lauch CMD script
    bindsym Return exec ${HOME}/.config/rofi/pipeline CMD; mode "default"
    # Lauch script to kill processes
    bindsym k exec ${HOME}/.config/rofi/pipeline Kill; mode "default"
    # Lauch Code rofi
    bindsym c exec ${HOME}/.config/rofi/pipeline Code; mode "default"
    # Lauch Calc script
    bindsym m exec ${HOME}/.config/rofi/pipeline Calc; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+space mode "ROFI"

# Flameshot mode for screenshotting
mode "FLAMESHOT" {

    # Screenshot region
    bindsym s exec flameshot gui; mode "default"
    # Screenshot screen 0
    bindsym 1 exec flameshot screen -n 0 -c; mode "default"
    # Screenshot screen 1
    bindsym 2 exec flameshot screen -n 1 -c; mode "default"
    # Screenshot full
    bindsym Print exec flameshot full -c; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+s mode "FLAMESHOT"

# Flameshot mode for screenshotting
mode "SYSTEM" {

    # Launch pavucontrol
    bindsym v exec pavucontrol; mode "default"
    # Launch blueman
    bindsym b exec blueman-manager; mode "default"
    # Launch nm-connection-editor
    bindsym n exec nm-connection-editor; mode "default"
    # Launch htop
    bindsym h exec $terminal -e htop; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+c mode "SYSTEM"

# Trabalho
mode "LABI" {

    # Launch Chrome
    bindsym b exec google-chrome-stable; mode "default"
    # Launch Slack
    bindsym m exec slack; mode "default"
    # Launch Code with db-crawler
    bindsym c exec code /home/thales/Projects/db-crawler; mode "default"
    # Launch Notion
    bindsym n exec /home/thales/Apps/Notion-linux-x64/Notion; mode "default"
    # Launch DBeaver
    bindsym d exec dbeaver; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+w mode "LABI"


###########################################################
#                        i3-gaps
###########################################################

# Remove window title
for_window [class=".*"] border pixel 2
gaps inner 8


###########################################################
#                     Autostart Apps
###########################################################

# Set up monitor resolution and positioning
exec_always sleep 0.5 && \
            xrandr --output VGA-0 --off \
            --output DVI-D-0 --mode 1920x1080 --pos 1920x0 --rotate left \
            --output HDMI-0 --primary --mode 1920x1080 --pos 0x215 --rotate normal

# Picom daemon
exec --no-startup-id picom -b

# Fetch sunrise and sunset times
exec --no-startup-id ${HOME}/Scripts/sunrise-sunset

# Run crontab manager to set light and dark jobs
exec ${HOME}/Scripts/ctab.py

# Set mode on boot
exec_always sleep 1 && ${HOME}/Scripts/light-dark-mode

# urxvt daemon
exec --no-startup-id urxvtd -q -o -f

# Enable Night-Light (Redshift)
exec --no-startup-id redshift -l -23.536215622740578:-46.68497829306198

# Switch Esc with Caps-Lock
exec --no-startup-id setxkbmap -option "caps:swapescape"

# Keyring
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Mouse control from keyboard
exec --no-startup-id keynav daemonize

# Clipboard manager
exec --no-startup-id clipit --no-icon

# Disable bell and auto-suspension
exec --no-startup-id xset b off s off -dpms

# Set Slash/? key to Super
exec --no-startup-id xmodmap -e "keycode 97 = Super_L NoSymbol Super_L"


