# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $alt+Control+Delete exec ${HOME}/.config/rofi/pipeline.sh Power

# resize window (you can also use the mouse for that)
mode "RESIZE" {
   # Pressing left will shrink the window’s width.
   # Pressing right will grow the window’s width.
   # Pressing up will shrink the window’s height.
   # Pressing down will grow the window’s height.
   bindsym h resize shrink width 5 px or 5 ppt
   bindsym j resize grow height 5 px or 5 ppt
   bindsym k resize shrink height 5 px or 5 ppt
   bindsym l resize grow width 5 px or 5 ppt

   # same bindings, but for the arrow keys
   # bindsym Left resize shrink width 5 px or 5 ppt
   # bindsym Down resize grow height 5 px or 5 ppt
   # bindsym Up resize shrink height 5 px or 5 ppt
   # bindsym Right resize grow width 5 px or 5 ppt

   # back to normal: Enter or Escape or $mod+r
   bindsym Return mode "default"
   bindsym Escape mode "default"
   bindsym $mod+r mode "default"
}

bindsym $mod+r mode "RESIZE"

# Rofi mode for launching different scripts
mode "ROFI" {

    # Lauch main script (app launcher and others)
    bindsym space exec ${HOME}/.config/rofi/main.sh -show combi; mode "default"
    # Lauch Power script
    bindsym Delete exec ${HOME}/.config/rofi/pipeline.sh Power; mode "default"
    # Lauch CMD script
    bindsym Return exec ${HOME}/.config/rofi/pipeline.sh CMD; mode "default"
    # Lauch script to kill processes
    bindsym k exec ${HOME}/.config/rofi/pipeline.sh Kill; mode "default"
    # Lauch Code rofi
    bindsym c exec ${HOME}/.config/rofi/pipeline.sh Code; mode "default"
    # Lauch Calc script
    bindsym m exec ${HOME}/.config/rofi/pipeline.sh Calc; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+space mode "ROFI"

# Flameshot mode for screenshotting
mode "FLAMESHOT" {

    # Screenshot region
    bindsym s exec flameshot gui; mode "default"
    # Screenshot screen 0
    bindsym 1 exec flameshot screen -n 0 -c; mode "default"
    # Screenshot screen 1
    bindsym 2 exec flameshot screen -n 1 -c; mode "default"
    # Screenshot full
    bindsym Print exec flameshot full -c; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+s mode "FLAMESHOT"

# Flameshot mode for screenshotting
mode "SYSTEM" {

    # Launch pavucontrol
    bindsym v exec pavucontrol; mode "default"
    # Launch blueman
    bindsym b exec blueman-manager; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+c mode "SYSTEM"

# Trabalho
mode "LABI" {

    # Launch Chrome
    bindsym b exec google-chrome-stable; mode "default"
    # Launch Slack
    bindsym s exec slack; mode "default"
    # Launch Code with db-crawler
    bindsym c exec code /home/thales/Projects/db-crawler; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

bindsym $mod+w mode "LABI"

