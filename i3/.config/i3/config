###########################################################
#                     Personal Binds
###########################################################

# Executables and config directories
set $bin ${HOME}/.local/bin
set $config ${HOME}/.config

# Kill focused window
bindsym $mod+BackSpace kill
bindsym $alt+q kill

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Start a terminal
bindsym $mod+Return exec $terminal

# Exit i3 (logs you out of your X session)
bindsym $alt+Control+BackSpace exec $config/rofi/launch Power

# Open browsers
bindsym $mod+b exec brave --profile-directory="Default"
bindsym $mod+u workspace $ws2, exec brave --profile-directory="Profile 1"

# Telegram
bindsym $mod+m exec telegram-desktop

# Whatsapp
bindsym $mod+n exec brave --profile-directory="Default" --app-id=hnpfjngllnobngcgfapefoaidbinmjnm

# File Managers
bindsym $mod+e exec $terminal -e ranger
bindsym $mod+Shift+e exec pcmanfm

# Clipboard Manager
bindsym $mod+v exec $config/rofi/launch Clipboard

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Use brightnessctl to adjust brightness.
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

# Dunst keybinds for closing and history
# Close notification.
bindsym $alt+space exec --no-startup-id dunstctl close
# Close all notifications.
bindsym $alt+Control+space exec --no-startup-id dunstctl close-all
# Redisplay last message(s).
bindsym $alt+Control+h exec --no-startup-id dunstctl history-pop
# Context menu.
bindsym $alt+Control+c exec --no-startup-id dunstctl context


###########################################################
#                        Modes
###########################################################

# General launching utilities
bindsym $mod+space mode "APPS"
mode "APPS" {
    # Lauch main script (app launcher and others)
    bindsym space exec $config/rofi/launch; mode "default"
    bindsym $mod+space exec $config/rofi/launch; mode "default"
    # Lauch CMD script
    bindsym Return exec $terminal -name cmd; mode "default"
    # Lauch script to kill processes
    bindsym k exec $config/rofi/launch Kill; mode "default"
    # Lauch Project with tmux
    bindsym c exec $terminal -e zsh -i -c proj; mode "default"
    # Lauch Calc
    bindsym m exec $terminal -name qalc -e qalc -t; mode "default"
    # Launch pavucontrol
    bindsym v exec pavucontrol; mode "default"
    # Launch bluetooth script
    bindsym b exec $config/rofi/launch Bluetooth; mode "default"
    # Launch nm-connection-editor
    bindsym n exec nm-connection-editor; mode "default"
    # Launch htop
    bindsym h exec $terminal -name htop -e htop; mode "default"
    # Open SPOTIFY mode
    bindsym s mode "SPOTIFY"
    # Launch bluetooth script
    bindsym BackSpace exec $config/rofi/launch Power; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

# Spotifyd and Spotify-TUI mode
mode "SPOTIFY" {
    # Run sptinit (start spotifyd and spt)
    bindsym i exec sptinit; mode "default"
    # Run sptstop (stop spotifyd)
    bindsym s exec sptstop; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

# Screenshot mode
bindsym $mod+s mode "SCREENSHOT"
mode "SCREENSHOT" {
    # Screenshot region
    bindsym s exec "maim -sl -m 10 -c 0.31,0.98,0.48,0.1 | xclip -se c -t image/png"; mode "default"
    # Screenshot screen 1
    bindsym 1 exec $bin/maim_monitor 0; mode "default"
    # Screenshot screen 2
    bindsym 2 exec $bin/maim_monitor 1; mode "default"
    # Screenshot all screens
    bindsym f exec "maim -m 10 | xclip -se c -t image/png"; mode "default"
    # Screenshot active window
    bindsym a exec "maim -m 10 -Bui $(xdotool getactivewindow) | xclip -se c -t image/png"; mode "default"
    # Save clipboard image to file in screenshot directory
    bindsym Shift+s exec "xclip -se c -t image/png -o > ~/Imagens/Screenshots/$(date +%Y%m%d%H%M%S).png"; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}

# Trabalho
bindsym $mod+w mode "WORK"
mode "WORK" {
    # Launch Chrome
    bindsym b exec google-chrome-stable; mode "default"
    # Launch Slack
    bindsym m exec slack; mode "default"
    # Launch Notion
    bindsym n exec brave --profile-directory="Default" --app-id=gpmngigldijofdhcmpepkjelnjhoddlh; mode "default"
    # Open DB mode
    bindsym d mode "DB"
    # Escape mode
    bindsym Escape mode "default"
}

mode "DB" {
    # Launch PGAdmin
    bindsym i exec $terminal -name pginit -e zsh -i -c pginit; mode "default"
    # Stop PGAdmin
    bindsym s exec $terminal -name pgstop -e pgstop; mode "default"
    # Escape mode
    bindsym Escape mode "default"
}


###########################################################
#                        i3-gaps
###########################################################

# Remove window title
for_window [class=".*"] border pixel 2
gaps inner 8


###########################################################
#                     Autostart Apps
###########################################################

# Set up monitor resolution and positioning, then theme mode
exec_always $bin/screen_setup && $bin/light-dark-mode

# Picom daemon
exec --no-startup-id picom -b

# Fetch sunrise and sunset times
# exec --no-startup-id sunrise-sunset

# Touchpad configs
# Enables Tap-to-Click
exec --no-startup-id xinput set-prop "Elan Touchpad" "libinput Tapping Enabled" 1
# Enables Natural Scrolling (right direction)
exec --no-startup-id xinput set-prop "Elan Touchpad" "libinput Natural Scrolling Enabled" 1

# Run crontab manager to set light and dark jobs
# exec --no-startup-id sleep 3 && ctab.py

# Set mode on boot
# exec_always sleep 1 && light-dark-mode

# urxvt daemon
exec --no-startup-id urxvtd -q -o -f

# Enable Night-Light (Redshift)
exec --no-startup-id redshift -l -23.536215622740578:-46.68497829306198

# Keyring
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Clipboard manager
exec --no-startup-id greenclip daemon

# Set keyboard rate, bell and suspension, then keyboard layout and xcape
# then keyboard mouse control
exec --no-startup-id $bin/brim && keynav daemonize

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet


