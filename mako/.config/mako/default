# Mako Configuration - Dracula Theme

# Monitor to display all notifications
output=HDMI-A-1

# Global settings
font=FontAwesome 12

width=350
height=100

# Position notifications in the top-right corner
anchor=top-right
margin=10
padding=15

# Border settings
border-size=2
border-radius=10

# Background color (Dracula background)
background-color=#282a36CC

# Text color (Dracula foreground)
text-color=#f8f8f2

# Border color (Dracula accent/selection)
border-color=#bd93f9CC

# Default timeout for notifications (in milliseconds)
default-timeout=5000

# Icon settings
# Set to '1' to show icons, '0' to hide them
icons=1

# Message format
format=<b>%a</b>\n<i>%s</i>\n%b

# Notification sound
# on-notify=exec mpv --no-video /home/thales/.local/share/pipx/venvs/gcal-notifier/lib/python3.13/site-packages/gcal_notifier/resources/pop.wav

# Urgency levels (Dracula themed)
[urgency=low]
background-color=#44475aCC
text-color=#f8f8f2
border-color=#44475aCC

[urgency=normal]
background-color=#282a36CC
text-color=#f8f8f2
border-color=#bd93f9CC

[urgency=critical]
background-color=#ff5555CC
text-color=#f8f8f2
border-color=#ff5555CC
default-timeout=0


[app-name=Brightness]
layer=overlay
history=0
anchor=top-center
group-by=app-name
format=<b>%s</b>\n%b
progress-color=#8be9fdCC

[app-name=Brightness group-index=0]
invisible=0


[app-name=Volume]
layer=overlay
history=0
anchor=top-center
group-by=app-name
format=<b>%s</b>\n%b
progress-color=#6272a4CC

[app-name=Volume group-index=0]
invisible=0
